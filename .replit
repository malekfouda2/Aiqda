modules = ["nodejs-20", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["mongodb"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Aiqda Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Aiqda Frontend"

[[workflows.workflow]]
name = "Aiqda Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p /tmp/mongodb && (pgrep -x mongod || mongod --dbpath /tmp/mongodb --fork --logpath /tmp/mongodb/mongod.log) && cd backend && npm run dev"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Aiqda Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "mkdir -p /tmp/mongodb && mongod --dbpath /tmp/mongodb --fork --logpath /tmp/mongodb/mongod.log && cd /home/runner/workspace/backend && PORT=5000 node src/server.js"]
build = ["bash", "-c", "cd /home/runner/workspace/backend && npm install && cd /home/runner/workspace/frontend && npm install && npm run build"]
